{
	"schemaVersion": 1,
	"id": "more-hoppers",
	"version": "${version}",
	"name": "More Hoppers",
	"description": "This mod adds more hoppers to Minecraft, including slower ones that are easier to craft, and faster ones that require much more resources!",
	"authors": [
		"JJVCOB"
	],
	"contact": {
		"homepage": "https://github.com/JJVCOB",
		"sources": "https://github.com/JJVCOB/MoreHoppers"
	},
	"license": "MIT",
	"icon": "assets/more-hoppers/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"net.jjvcob.morehoppers.MoreHoppers"
		],
		"client": [
			"net.jjvcob.morehoppers.MoreHoppersClient"
		],
		"fabric-datagen": [
			"net.jjvcob.morehoppers.MoreHoppersDataGenerator"
		]
	},
	"mixins": [
		"more-hoppers.mixins.json",
		{
			"config": "more-hoppers.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.4",
		"minecraft": "~1.21.11",
		"java": ">=21",
		"fabric-api": "*"
	}
}